@model List<Awesome_Time.ServiceClasses.ArticleServiceClasses.ArticleServiceModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @if (Model.Count > 0)
    {
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item text-center active">
                <h2>
                    @Model[0].Title
                </h2>
                <div >
                    @Html.Raw(Model[0].Body)
                </div>
            </div>
            @if (Model.Count > 1)
            {
                for (int i = 1; i < Model.Count; i++)
                {
                    <div class="item text-center">
                        <h2>
                            @Model[i].Title
                        </h2>
                        <div>
                            @Html.Raw(Model[i].Body)
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

        <!-- Indicators -->
        <div>
            <ol class="carousel-indicators bottom">
                <li data-target="#carousel-example-generic" data-slide-to="-" class="active"></li>
                @if (Model.Count > 1)
                {
                    for (int i = 1; i < Model.Count; i++)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                    }
                }
            </ol>
        </div>
    </div>
    }
</div>